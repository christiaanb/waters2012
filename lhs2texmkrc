$pdf_mode = 1;
$pdflatex = 'lhs2TeX -v --poly %B.lhs > %B.tex; pdflatex --file-line-error --halt-on-error --shell-escape --enable-write18 %O %B.tex %B.pdf';
$clean_ext = "nav snm ptb aux bbl pdf_tex tex";

